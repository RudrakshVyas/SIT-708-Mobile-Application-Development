<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- âœ… Back Icon -->
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp" />

        <!-- Username -->
        <TextView
            android:id="@+id/textUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="8dp" />

        <!-- âœ… Email View -->
        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Stats -->
        <TextView
            android:id="@+id/textTotalQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Questions: 10"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textCorrectAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correctly Answered: 10"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textWrongAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incorrect Answers: 10"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/buttonHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‚ View History"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonUpgrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’Ž Upgrade Account"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#00C853"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¤ Share Profile"
            android:backgroundTint="#03A9F4"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
