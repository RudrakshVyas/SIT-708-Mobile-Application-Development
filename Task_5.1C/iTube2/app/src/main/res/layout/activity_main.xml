<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <EditText
        android:id="@+id/editTextUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Paste YouTube Link Here"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_edittext"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="▶️ Play Video"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button"
        android:layout_below="@id/editTextUrl"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💾 Save to Playlist"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button"
        android:layout_below="@id/buttonPlay"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/buttonViewPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📃 View Playlist"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button"
        android:layout_below="@id/buttonSave"
        android:layout_margin="16dp" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonViewPlaylist"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
