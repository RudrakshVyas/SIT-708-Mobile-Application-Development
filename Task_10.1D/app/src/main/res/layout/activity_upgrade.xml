<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:text="Upgrade your experience"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonStarter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starter - Purchase"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#1E88E5"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonIntermediate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intermediate - Purchase"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#43A047"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonAdvanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advanced - Purchase"
        android:backgroundTint="#FB8C00"
        android:textColor="@android:color/white" />
</LinearLayout>
